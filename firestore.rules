
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read/write access for development.
    // In a production environment, you should secure these rules.
    // For example, only allow authenticated users to read/write their own data.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
